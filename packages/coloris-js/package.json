{
  "name": "coloris-js",
  "version": "1.0.0",
  "description": "A color palette generator",
  "keywords": [
    "color",
    "css",
    "typescript"
  ],
  "homepage": "https://colorisjs.vercel.app",
  "bugs": {
    "url": "https://github.com/lushiyun/coloris/issues"
  },
  "author": "Shiyun Lu <shiyunlu.hi@gmail.com> (https://shiyunlu.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lushiyun/coloris.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.1",
    "@changesets/cli": "^2.27.10",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "test": "vitest run",
    "dev": "vitest",
    "ci": "pnpm run build && pnpm run check-format && pnpm run check-exports && pnpm run test",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "pnpm run ci"
  },
  "main": "dist/index.js",
  "dependencies": {
    "@radix-ui/colors": "^3.0.0",
    "bezier-easing": "^2.1.0",
    "colorjs.io": "^0.5.2"
  }
}
